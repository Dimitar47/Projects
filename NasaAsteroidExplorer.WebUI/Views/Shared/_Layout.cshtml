<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nasa Asteroid Explorer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NasaAsteroidExplorer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-controller="Apod" asp-action="Index">
                    <i class="fas fa-satellite-dish me-2 text-primary"></i> Nasa Asteroid Explorer
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav gap-3 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link fs-5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Apod" ? "fw-bold text-primary" : "text-dark")"
                               asp-controller="Apod" asp-action="Index">
                                <i class="fas fa-camera-retro me-1"></i> APOD
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fs-5 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Asteroid" ? "fw-bold text-primary" : "text-dark")"
                               asp-controller="Asteroid" asp-action="Index">
                                <i class="fas fa-meteor me-1"></i> Asteroid Listing
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer bg-light border-top py-4 mt-auto text-center text-muted fs-5">
        <div class="container">
            &copy; 2025 - <strong>Nasa Asteroid Explorer</strong>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
