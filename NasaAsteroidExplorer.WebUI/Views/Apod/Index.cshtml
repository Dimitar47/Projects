@model NasaAsteroidExplorer.WebUI.ViewModels.ApodViewModel
@{
    ViewData["Title"] = "Astronomy Picture of the Day";
}

<div class="text-center mb-4">
    <form method="get" asp-controller="Apod" asp-action="Index" class="form-inline d-flex justify-content-center gap-2">
        <input type="date" id="date" name="date" value="@Model.Date.ToString("yyyy-MM-dd")" class="form-control form-control-lg" />
        <button type="submit" class="btn btn-primary btn-lg">View</button>
    </form>
</div>

<div class="card shadow-lg mb-5">
    <div class="card-body text-center">
        <h2 class="card-title">@Model.Title</h2>
        <p class="text-muted">@Model.Date.ToString("D")</p>

        @if (Model.MediaType == "image" && !string.IsNullOrEmpty(Model.Url))
        {
            <a href="@Model.Url" target="_blank">
                <img src="@Model.Url" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-height:600px;" />
            </a>
        }
        else if (!string.IsNullOrEmpty(Model.Url))
        {
            <div class="my-3">
                <a href="@Model.Url" class="btn btn-outline-info" target="_blank">View Media</a>
            </div>
        }

        <p class="card-text mt-4 text-start fs-5 lh-lg">@Model.Explanation</p>
    </div>
</div>
